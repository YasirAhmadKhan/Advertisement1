<%=form_for @book,:url=>book_create_path ,html:{multipart:true} do|f| %>
<div>
    <%=f.label :title%><br>
    <%=f.text_field :title%>
</div>

<div>
<%=f.label :author_name%><br>
<%=f.text_field :author_name%>
</div>
<div>
<%=f.label :subject_code%><br>
<%=f.number_field :subject_code%>
</div>

<div>
<%=f.label :Image%><br>
<%=f.file_field :image%>
</div>

<div>
<%=f.submit "Submit"%><br>
</div>

<strong><%=link_to "Home",book_index_path%></strong>
<%end%>